<body>
<div class="container">
  <h1>Fake Product Detector</h1>

  <button id="startCam">Start Camera Scan</button>
  <button id="stopCam" style="background:#888">Stop Camera</button>

  <video id="video" autoplay playsinline></video>

  <label for="manualInput">Or Enter Product Code:</label>
  <input type="text" id="manualInput" placeholder="e.g. PROD-ALPHA-2025-B01">
  <button id="verifyBtn">Verify</button>

  <div id="result" class="result">No verification yet.</div>
</div>

<script>
// Mock database
const mockDB = [
  { code:'PROD-ALPHA-2025-B01', name:'GenuinePainAway 250mg' },
  { code:'PROD-BETA-2024-B12', name:'PureSkin Cream 50g' },
  { code:'PROD-GAMMA-2025-B05', name:'VoltCharge Powerbank' }
];

const resultBox = document.getElementById('result');
const video = document.getElementById('video');
let stream=null, scanning=false;
let detector=null;

async function startCamera(){
  try{
    stream = await navigator.mediaDevices.getUserMedia({video:{facingMode:'environment'}});
    video.srcObject = stream;
    scanning = true;
    if('BarcodeDetector' in window){
      const formats = await BarcodeDetector.getSupportedFormats();
      detector = new BarcodeDetector({formats});
      scanLoop();
    } else {
      resultBox.textContent = "BarcodeDetector API not supported. Use manual mode.";
    }
  } catch(e){ resultBox.textContent = "Camera start failed: "+e.message; }
}

function stopCamera(){
  scanning=false;
  if(stream){ stream.getTracks().forEach(t=>t.stop()); stream=null; }
}

async function scanLoop(){
  if(!scanning || !detector) return;
  try{
    const bitmap = await createImageBitmap(video);
    const detections = await detector.detect(bitmap);
    if(detections.length>0){
      const code = detections[0].rawValue;
      manualVerify(code);
      stopCamera();
    }
  }catch(e){/* ignore */}
  if(scanning) requestAnimationFrame(scanLoop);
}

function manualVerify(code){
  const found = mockDB.find(item=>item.code===code);
  if(found){
    resultBox.className='result genuine';
    resultBox.textContent = `Genuine Product: ${found.name}`;
  } else {
    resultBox.className='result fake';
    resultBox.textContent = 'Possible counterfeit or invalid code.';
  }
}

// Event listeners
document.getElementById('startCam').addEventListener('click', startCamera);
document.getElementById('stopCam').addEventListener('click', stopCamera);
document.getElementById('verifyBtn').addEventListener('click', ()=>manualVerify(document.getElementById('manualInput').value.trim()));

</script>
</body>
</html>
